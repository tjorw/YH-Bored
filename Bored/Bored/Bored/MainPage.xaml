<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bored.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem  Text="About" Command="{Binding GoToAboutCommand}" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <StackLayout>
                <Label Text="Welcome to Bored!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
                <Label Text="Here is a suggestion of something to do if you are bored." HorizontalTextAlignment="Center" TextColor="White" FontSize="22"/>
            </StackLayout>
        </Frame>
        <Label FontSize="Title" Text="{Binding Activity}" Padding="30,10,30,10"/>
        <Label FontSize="Subtitle" Text="Participants" Padding="30,10,30,0"/>
        <Label FontSize="Title" Text="{Binding Participants}" Padding="30,0,30,0"/>
        <Label FontSize="Subtitle" Text="Price" Padding="30,10,30,0"/>
        <Label FontSize="Title" Text="{Binding Price}" Padding="30,0,30,0"/>
        <Button Padding="30,10,30,10" Text="NEW" Command="{Binding LoadCommand}"/>
    </StackLayout>

</ContentPage>
