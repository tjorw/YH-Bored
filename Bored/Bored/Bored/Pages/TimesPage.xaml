<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bored.Pages.TimesPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Hot news from times!" />

            <ListView HorizontalOptions="FillAndExpand" ItemsSource="{Binding Articles}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label FontSize="Micro" Text="{Binding Description}"></Label>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>